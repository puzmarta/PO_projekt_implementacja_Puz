@model IEnumerable<PO_projekt_implementacja_Puz.ViewModels.ApplicationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Id</h3>
            </th>
            <th>
                <h3>Data złożenia</h3>
            </th>
            <th>
                <h3>Status</h3>
            </th>
            <th>
                <h3>Wydział</h3>
            </th>
            <th>
                <h3>Kierunek</h3>
            </th>
            <th>
                <h3>Kandydat</h3>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

       
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Identfier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmissionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Recruitment.FieldOfStudyFkNavigation.FacultyFkNavigation.FacultyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recruitment.FieldOfStudyFkNavigation.FieldName)
            </td>
            <td>
                    @{
                        var user = item.Candidate.LoggedUserFkNavigation;
                        var nameString = $"{user.FirstName} {user.LastName} - {item.Candidate.Pesel}";
                    }
                    @nameString
                    
            </td>
        </tr>
}
    </tbody>
</table>
